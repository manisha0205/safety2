<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7DCF8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LivelihoodRightFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
       app:cardCornerRadius="50dp"
        app:cardElevation="15dp"
        android:layout_gravity="center"
        android:layout_height="700dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/livelihood"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:justificationMode="inter_word"
                android:text="Term ‘livelihood’ means a mode of securing the necessities of life. Right to livelihood is an integral part of the Right to life. If one’s Right to livelihood would be deprived, then it means that we are taking that person’s Right to life."
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>