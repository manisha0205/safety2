<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DDEFF1"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EqualityRight">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
       app:cardCornerRadius="50dp"
        app:cardElevation="15dp"
        android:layout_gravity="center"
        android:layout_height="700dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/right_to_equality"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:justificationMode="inter_word"
                android:textSize="30sp"
                android:text="The Constitution says that the government shall not deny to any person in India equality before , the law or to  the equal protection of the laws. It means that the laws apply in same manner to all, regardless of a personâ€™s status"
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>