<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#CDD8C1"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LibertyRightFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="15dp"
        android:layout_gravity="center"
        android:layout_height="700dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/liberty"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:justificationMode="inter_word"
                android:text="It focuses on protecting individuals right from unreasonable detention, as opposed to protecting personal safety. You have a right to your personal freedom. This means you must not be imprisoned or detained without good reason."
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>